<div class="main">
  <div class="container">
    <div class="row">
      <% @catalogs.each do |catalog| %>
        <div class="col-md-3 padding-bt">
          <div class="card h-100">
            <%= image_tag(catalog.avatar, alt: "sandwich", class:"card-img-top") %>
            <div class="card-body">
              <h5 class="card-title"><%= catalog.title %></h5>
              <p class="card-text"><%= catalog.body %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>